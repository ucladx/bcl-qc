includeConfig 'config/bclqc.yaml'

conda.enabled = true

params {
	input = null // no default input, but we expect samplesheet here
	run_dir = null // alternatively could parse run_dir for samplesheet
	fastq_outdir = null
	bam_outdir = null
	step = 'demux' // first step is demux by default
	validate_params = true
	show_params_summary = true
}

plugins {
	id 'nf-validation' // paramater validation and samplesheet parsing
}
